---
import Aside from '../Aside.astro';

export interface Props {
	title: string;
	writter: string;
	publishDate: string;
	heroImage: string;
	alt: string;
	img: string;
	tags: string;
}

const { title, writter, publishDate, alt, img, tags } = Astro.props;


---
<div class="container">
	<Aside writter={writter}/>
	<article class="article">	
			
		<div>
			<div class="coffee">
				<img class="center-cropped" src={img} alt={alt} height="100%"/>
			</div>

			<div class="details">
				<h1>{title}</h1>
				<p>{writter}</p>
				<!-- <span>{publishDate}  |  {tag}</span> -->
			</div>
			</div>
		<main>
			<slot />
		</main>
	</article>
</div>
<style>

.container {
	display: flex;
	flex-direction: row;
	justify-content: center;
}

main{
    display: flex;
	flex-direction: column;
    max-width: 1200px;
}

/* align details center of screen */
.details {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

	
.article {
	display: flex;
	flex-direction: column;
	justify-content: center;
    width: 100vh;
	height: auto;
    background-color: #ffffff;
    border-radius: 5px;
    margin-top: 25px;
    margin-left: 30px;
    padding: 15px;
    display: flex;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}
.coffee{
    width: 170px;
}
.coffee > img{
    border-radius: 5px;
}

.center-cropped {
  width: 200%;
  height: 200%;
  object-fit: cover;
  background-repeat: no-repeat;
}

/*--------Article Details-------------*/
.details{
    width: 470px;
    padding-left: 5px;
}

.details span{
    text-transform: uppercase;
    font-size: 12px;
    color: #858585;
}

.details p{
    font-size: 12.5px;
    margin-top: 5px;
    padding-top: 20px;
    color: #777777;
}


/* remove link decoration */
.details a{
    color: #303030;
    font-size: 12px;
    text-decoration: none;
}
a:link {
  text-decoration: none;
}

a:visited {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}


/*----------------------------------------*/

</style>
