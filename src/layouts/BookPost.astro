---
import BaseHead from '../components/Blog/BaseHead.astro';
import BlogHeader from '../components/Blog/Header.astro';
import BlogPost from '../components/Blog/BlogPost.astro';
import LeftSidebar from '../components/Sidebar/LeftSidebar.astro';

const { content } = Astro.props;
const { title, description, publishDate, author, heroImage, permalink, alt} = content;

let allBookPosts = await Astro.glob('../pages/posts/bookreview/*.md');

allBookPosts = allBookPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

let mostRecentPost = allBookPosts[0];
---

<html lang={content.lang || 'en'}>
	
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body>
		<div class="body">
		<LeftSidebar mostRecentPost = {mostRecentPost}/>
		<main class="home_content">
			<BlogHeader />
			<div class="wrapper">
				<BlogPost {title} {author} {heroImage} {publishDate} {alt}>
					<slot />
				</BlogPost>
			</div>
		</main>
	</div>
	</body>
</html>

<style>
	.wrapper {
	margin-left: auto;
	margin-right: auto;
	max-width: 65em;
	padding-left: 2rem;
	padding-right: 2rem;
	width: 100%;
}
</style>