---
import '../styles/shiki.css';
import Meta from '../components/MetaTags.astro';
import Navbar from '../components/Navbar.astro';
import Cursor from '../components/cursorEffect/Cursor.astro';
import BlogPost from '../components/blog/Post.astro';
import Footer from '../components/footer/Footer.astro';

const { content } = Astro.props;
const { title, author, year, publishDate, writer, href, description, img, alt,permalink } = content;
---

<html lang={content.lang || 'en'}>
	<head>
		<Meta title={title} description={description} permalink={permalink} />
		<script src="https://kit.fontawesome.com/e2fcf864fc.js" crossorigin="anonymous"></script>
	</head>

	<body>
		<Cursor />
		<Navbar />
		<div class="container">
			<main class="body home_content">
				<div class="container">
					<div class="grid">
						<BlogPost title={title} publishDate={publishDate} writer={writer} href={href} img={img} description={description} alt={alt} >
							<slot />
						</BlogPost>
					</div>
				</div>
			</main>
		</div>
	</body>

	<Footer />

</html>

<style>
.container {
	margin-top: 2rem;
}
</style>