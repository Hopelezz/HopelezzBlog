---
import { MDXInstance } from "astro";
import "../../styles/theme.postcss";
import { Post } from "../../utils/types";
import {getAuthor} from '../../utils/api.astro';
export interface Props {
	post: MDXInstance<Post>
}
const { post } = Astro.props;
console.log(post.file);
const { title, publishDate, writer, href, description, img, alt, tags } = post.frontmatter;

const tag = tags.split(",")[0]; // returns the first tag

const author = await getAuthor(writer);
const { name, twitter, twitterHandle, linkedin, linkedinHandle, github, githubHandle, photo, bio } = author;
---
<!--Article-->
<div class="postContainer">
    <a href={post.url}>
    <article class='postCard'>
        <div class="coffee">
            <img class="center-cropped" src={post.frontmatter.img} alt={alt} >
        </div>

        <div class="details">
            <h2 class='brand text3'>{title}</h2>
            <span class='text'>{publishDate}  |  {tag}</span>
            <br/>
            <span class='text'>{name}</span>
            <p class='text3 truncate'>{description}</p>
        </div>
    </article>
</a>
</div>

<style>
/*----------------Section--------------*/
.postContainer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.postCard {
    flex-basis: var(--size-content-1);
    display: flex;
    flex-direction: row;
    gap: var(--size-4);
    background: var(--surface2);
    padding: var(--size-4);
    border-radius: var(--radius-3);
    box-shadow: var(--shadow-3);
    margin: var(--size-3);
    border: 1px solid var(--brand);
    width: 32rem;
    min-height: 11rem;
    transition: all 0.3s ease-in-out;
}

.postCard:hover {
    background: var(--surface3);
    box-shadow: var(--shadow-4);
    transform: translateY(-5px);
    transition: transform 0.3s ease-in-out;
}

a {
    text-decoration: none;
}

/*------------Coffee Image-------------*/
.coffee{
    width: 170px;
}

.coffee > img{
    border-radius: 5px;
}

.center-cropped {
  width: 170px;
  height: 170px;
  object-fit: cover;
  background-repeat: no-repeat;
}

/*--------Article Details-------------*/
.details h2 {
    text-transform: uppercase;
}

.details span {
    text-transform: capitalize;
    font-size: var(--size-3);
    font-weight: 300;
}

.details p {
    font-size: var(--size-3);
    margin-top: 5px;
}

/* remove link decoration */
.details a {
    font-size: 12px;
    text-decoration: none;
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  white-space: normal;
}

/*-------------Media --------------------*/
@media (max-width: 768px) {
    .postCard {
        display: flex;
    }
    .postCard:pointer {
        box-shadow: var(--shadow-4);
        background: var(--surface3);
        transform: translateY(-5px);
    }
}

</style>
