---
import Meta from '../components/MetaTags.astro';
import Header from '../components/Header.astro';
import BookPost from '../components/bookShelf/Post.astro';
import LeftSidebar from '../components/sidebar/LeftSidebar.astro';

const { content } = Astro.props;
const { title, description, publishDate, author, heroImage, permalink, alt} = content;

let allBookPosts = await Astro.glob('../pages/bookreview/*.md');

allBookPosts = allBookPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

let mostRecentPost = allBookPosts[0];
---

<html lang={content.lang || 'en'}>
	<head>
		<Meta {title} {description} {permalink} />
	</head>

	<body>
		<div class="body">
		<LeftSidebar mostRecentPost = {mostRecentPost} />
		<main class="home_content">
			<Header />
			<div class="wrapper">
				<BookPost {title} {author} {heroImage} {publishDate} {alt}>
					<slot />
				</BookPost>
			</div>
		</main>
	</div>
	</body>
</html>

<style>
	.wrapper {
	margin-left: auto;
	margin-right: auto;
	max-width: 65em;
	padding-left: 2rem;
	padding-right: 2rem;
	width: 100%;
}
</style>